<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankFragment4">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/backgroundImage4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist_extralight"
            android:text="Location"
            android:textSize="65sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_get_current_location"
            android:layout_width="270dp"
            android:layout_height="54dp"
            android:layout_marginStart="84dp"
            android:text="Automatically get position"
            app:layout_constraintBottom_toBottomOf="@+id/backgroundImage4"
            app:layout_constraintStart_toStartOf="@+id/backgroundImage4"
            app:layout_constraintTop_toBottomOf="@+id/savedlocationText"
            app:layout_constraintVertical_bias="0.416" />

        <TextView
            android:id="@+id/savedlocationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginTop="28dp"
            android:background="#3C888888"
            android:fontFamily="@font/urbanist_bold"
            android:text="Saved location: (none)"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/backgroundImage4"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="278dp"
            android:layout_height="44dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="28dp"
            android:background="@color/textBackgroundWhite"
            android:ems="10"
            android:hint="Search for location"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <Button
            android:id="@+id/button_save_location"
            android:layout_width="168dp"
            android:layout_height="53dp"
            android:layout_marginEnd="84dp"
            android:text="Save Location"
            app:layout_constraintBottom_toBottomOf="@+id/backgroundImage4"
            app:layout_constraintEnd_toEndOf="@+id/backgroundImage4"
            app:layout_constraintTop_toBottomOf="@+id/editTextText"
            app:layout_constraintVertical_bias="0.102" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>